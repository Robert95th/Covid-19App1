<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/InformationHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Information"
            android:textAlignment="center"
            android:textSize="50dp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:id="@+id/viewS1"
           >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/v1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="symptoms"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/card2"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="103dp"
                                android:layout_height="wrap_content"
                                android:text="Caughing"
                                android:textAlignment="center"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/caugh" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/card2"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="103dp"
                                android:layout_height="wrap_content"
                                android:text="Headache"
                                android:textAlignment="center"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/headache" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/card2"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="103dp"
                                android:layout_height="wrap_content"
                                android:text="fever"
                                android:textAlignment="center"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/fever" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Prevention"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/card2"
                        android:elevation="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"

                            android:elevation="10dp"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/wash_hands" />

                            <TextView
                                android:layout_width="103dp"
                                android:layout_height="wrap_content"
                                android:text="Washing Hands"
                                android:textAlignment="center"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:padding="10dp"
                            android:text="Hand washing (or handwashing), also known as hand hygiene, is the act of cleaning one's hands to remove soil, grease, microorganisms, or other unwanted substances."
                            android:textSize="16dp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/card2"
                        android:elevation="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <LinearLayout
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"

                            android:elevation="10dp"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/wear_mask" />

                            <TextView
                                android:layout_width="103dp"
                                android:layout_height="wrap_content"
                                android:text="Wearing a mask"
                                android:textAlignment="center"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:padding="10dp"
                            android:text="a covering made of fibre or gauze and fitting over the nose and mouth to protect against air pollutants, or made of sterile gauze and worn to prevent infection of the wearer or (in surgery) of the patient."
                            android:textSize="16dp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>


            </LinearLayout>


        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:id="@+id/viewS2"
            android:visibility="gone">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="150dp"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card2"
                    android:padding="5dp"

                    android:layout_margin="15dp"
                    android:elevation="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_horizontal"
                        android:text="How does COVID-19 Spread?"
                        android:textAlignment="textStart"

                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/sum2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="7dp"

                        android:gravity="center_horizontal"
                        android:text="The virus that causes COVID-19 is thought to spread mainly from person to person, mainly through respiratory droplets produced when an infected person coughs or sneezes."
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:layout_marginLeft="50dp"
                        tools:ignore="RtlCompat" />
                    <TextView
                        android:id="@+id/answer2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="7dp"
                        android:gravity="center_horizontal"
                        android:text="There are 3 types of diabetes click more for article"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:layout_marginLeft="50dp"
                        tools:ignore="RtlCompat"
                        android:visibility="gone"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card2"
                    android:padding="5dp"

                    android:layout_margin="15dp"
                    android:elevation="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_horizontal"
                        android:text="Can i get Covid-19 If its in food?"
                        android:textAlignment="textStart"

                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="7dp"

                        android:gravity="center_horizontal"
                        android:text="Based on information about this novel coronavirus thus far, it seems unlikely that COVID-19 can be transmitted through food – additional investigation is needed."
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:layout_marginLeft="50dp"
                        tools:ignore="RtlCompat" />
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="7dp"
                        android:gravity="center_horizontal"
                        android:text="There are 3 types of diabetes click more for article"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:layout_marginLeft="50dp"
                        tools:ignore="RtlCompat"
                        android:visibility="gone"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card2"
                    android:padding="5dp"

                    android:layout_margin="15dp"
                    android:elevation="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_horizontal"
                        android:text="How to Protect Yourself"
                        android:textAlignment="textStart"

                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="7dp"

                        android:gravity="center_horizontal"
                        android:text="To protect your self keep areas around yo usanitary and avoid croweded places without a mask"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:layout_marginLeft="50dp"
                        tools:ignore="RtlCompat" />
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="7dp"
                        android:gravity="center_horizontal"
                        android:text="There are 3 types of diabetes click more for article"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:layout_marginLeft="50dp"
                        tools:ignore="RtlCompat"
                        android:visibility="gone"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card2"
                    android:padding="5dp"

                    android:layout_margin="15dp"
                    android:elevation="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_horizontal"
                        android:text="Children and Youth with Special Healthcare Needs?"
                        android:textAlignment="textStart"

                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="7dp"

                        android:gravity="center_horizontal"
                        android:text="Children with complex, chronic medical conditions, including children with physical, developmental, behavioral, or emotional differences, can have special healthcare needs. It’s not known yet whether all of these children are at higher risk for severe illness from COVID-19."
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:layout_marginLeft="50dp"
                        tools:ignore="RtlCompat" />
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="7dp"
                        android:gravity="center_horizontal"
                        android:text="There are 3 types of diabetes click more for article"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:layout_marginLeft="50dp"
                        tools:ignore="RtlCompat"
                        android:visibility="gone"/>


                </LinearLayout>

            </LinearLayout>


        </ScrollView>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/careInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="6dp"
        android:src="@drawable/ic_local_hospital"
        app:fabSize="normal"

        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/faqInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/careInfo"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="31dp"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="6dp"
        android:src="@drawable/ic_question"
        app:fabSize="normal" />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />


</RelativeLayout>